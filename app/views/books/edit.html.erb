<h1 class = "head-title">Editing Book</h1>


<% if @book.errors.any? %>
  <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @book, url:update_book_path(@book.id), method: :patch do |f| %>

<div class = "contents">

 <div class = "contents-area">
  <p class = "title-area">Title</p>
  <%= f.text_field :title %>
 </div>

 <div class = "contents-area">
  <p class = "body-area">Body</p>
  <%= f.text_area :body %>
 </div>

 <div class = "action">
   <%= f.submit 'Update Book' %>
 </div>
</div>
<!--なぜindexのとこでは、book.idでここでは@book.idになるのかわからない-->
<!--解決：コントローラのインスタンス変数を確認したら@booksが一覧表示に必要と分かった-->
  <%= link_to "Show" ,book_path(@book.id) %> |
  <%= link_to "Back", index_book_path(@books) %>

<% end %>